{
  "name": "JamiiForums Experience Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Best way to experience JamiiForums",
  "homepage_url": "https://github.com/giftcharles/jf-experience.git",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "JamiiForums Experience",
    "default_popup": "src/browser_action/index.html"
  },
  "permissions": [
    "https://www.jamiiforums.com/*",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.jamiiforums.com/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "src/inject/themes.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.jamiiforums.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}